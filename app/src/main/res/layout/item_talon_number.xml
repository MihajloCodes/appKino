<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="41dp"
    android:layout_height="41dp"
    android:background="@drawable/rectangle_background">

    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_number"
        app:layout_constraintEnd_toEndOf="@+id/item_number"
        app:layout_constraintStart_toStartOf="@+id/item_number"
        app:layout_constraintTop_toTopOf="@+id/item_number" />


</androidx.constraintlayout.widget.ConstraintLayout>