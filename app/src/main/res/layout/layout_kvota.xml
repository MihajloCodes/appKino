<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kvota_part"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bk_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="B.K."
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kvota_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Kvota"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="@+id/bk_title"
            app:layout_constraintTop_toBottomOf="@+id/bk_title" />


        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/kvota_title"
            app:layout_constraintTop_toTopOf="@+id/bk_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_part"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/first_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="3.75"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="1"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/first_odd"
                    app:layout_constraintEnd_toEndOf="@id/first_odd"
                    app:layout_constraintStart_toStartOf="@id/first_odd" />

                <TextView
                    android:id="@+id/second_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="14"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/first_odd"
                    app:layout_constraintStart_toEndOf="@id/first_odd"
                    app:layout_constraintTop_toTopOf="@id/first_odd" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="2"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/second_odd"
                    app:layout_constraintEnd_toEndOf="@id/second_odd"
                    app:layout_constraintStart_toStartOf="@id/second_odd" />

                <TextView
                    android:id="@+id/third_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="65"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/second_odd"
                    app:layout_constraintStart_toEndOf="@id/second_odd"
                    app:layout_constraintTop_toTopOf="@id/second_odd" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="3"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/third_odd"
                    app:layout_constraintEnd_toEndOf="@id/third_odd"
                    app:layout_constraintStart_toStartOf="@id/third_odd" />

                <TextView
                    android:id="@+id/fourth_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="275"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/third_odd"
                    app:layout_constraintStart_toEndOf="@id/third_odd"
                    app:layout_constraintTop_toTopOf="@id/third_odd" />

                <TextView
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="4"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/fourth_odd"
                    app:layout_constraintEnd_toEndOf="@id/fourth_odd"
                    app:layout_constraintStart_toStartOf="@id/fourth_odd" />

                <TextView
                    android:id="@+id/fifth_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="1350"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/fourth_odd"
                    app:layout_constraintStart_toEndOf="@id/fourth_odd"
                    app:layout_constraintTop_toTopOf="@id/fourth_odd" />


                <TextView
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="5"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/fifth_odd"
                    app:layout_constraintEnd_toEndOf="@id/fifth_odd"
                    app:layout_constraintStart_toStartOf="@id/fifth_odd" />

                <TextView
                    android:id="@+id/sixth_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="6500"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/fifth_odd"
                    app:layout_constraintStart_toEndOf="@id/fifth_odd"
                    app:layout_constraintTop_toTopOf="@id/fifth_odd" />


                <TextView
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="6"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/sixth_odd"
                    app:layout_constraintEnd_toEndOf="@id/sixth_odd"
                    app:layout_constraintStart_toStartOf="@id/sixth_odd" />

                <TextView
                    android:id="@+id/seventh_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="25000"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/sixth_odd"
                    app:layout_constraintStart_toEndOf="@id/sixth_odd"
                    app:layout_constraintTop_toTopOf="@id/sixth_odd" />

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="7"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/seventh_odd"
                    app:layout_constraintEnd_toEndOf="@id/seventh_odd"
                    app:layout_constraintStart_toStartOf="@id/seventh_odd" />

                <TextView
                    android:id="@+id/eighth_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="125000"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/seventh_odd"
                    app:layout_constraintStart_toEndOf="@id/seventh_odd"
                    app:layout_constraintTop_toTopOf="@id/seventh_odd" />


                <TextView
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="8"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toTopOf="@+id/eighth_odd"
                    app:layout_constraintEnd_toEndOf="@id/eighth_odd"
                    app:layout_constraintStart_toStartOf="@id/eighth_odd" />

                <View
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/space_line"
                    app:layout_constraintBottom_toTopOf="@+id/first_odd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>